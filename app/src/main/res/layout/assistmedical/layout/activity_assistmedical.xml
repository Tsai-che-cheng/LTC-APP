<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_assistmedical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <Button
                android:id="@+id/GlycerinBall"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gb"
                android:text="甘油球通便"
                android:textSize="60dp"/>
            <Button
                android:id="@+id/CarryingBloodMeter"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cbm"
                android:layout_marginTop="30dp"
                android:text="攜帶式血糖機\n驗血糖記錄及異常通報"
                android:textSize="60dp"/>
            <Button
                android:id="@+id/SimpleCareForWoundSecretions"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="scfws"
                android:layout_marginTop="30dp"
                android:text="傷口分泌物簡易照顧處理"
                android:textSize="60dp"/>
            <Button
                android:id="@+id/BodyPipelineCleaning"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bpc"
                android:layout_marginTop="30dp"
                android:text="身上管路清潔\n(鼻胃管、尿管)"
                android:textSize="55dp"/>
            <Button
                android:id="@+id/OralSuction"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="os"
                android:layout_marginTop="30dp"
                android:text="口腔抽吸"
                android:textSize="60dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>