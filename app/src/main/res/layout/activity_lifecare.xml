<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity_lifecare">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BUT"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/BTG"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BG"
            android:text="上一頁"
            android:textSize="40sp" />
        <Button
            android:id="@+id/BTH"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BH"
            android:text="回首頁"
            android:textSize="40sp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VLine">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="受到沙國煉油廠被攻擊影響，本週國際油價飆漲，估計下週國內汽油每公升將大漲0.9元、柴油漲1元。不過，由於超越亞鄰競爭國最低價，預估中油每公升將吸收0.4到0.5元，汽油每公升最後可能調漲0.4或0.5元。"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/VLine" />
            <ImageView
                android:id="@+id/Imagetest"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/test1"
                app:layout_constraintTop_toBottomOf="@id/Detail" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/VLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/BUT">
        <VideoView
            android:id="@+id/videoTest"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="150dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>