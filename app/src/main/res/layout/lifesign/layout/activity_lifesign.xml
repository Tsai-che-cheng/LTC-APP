<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_lifesign">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <Button
                android:id="@+id/LifeSM"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="lsm"
                android:text="生命徵象測量重要性"
                android:textSize="60dp"/>
            <Button
                android:id="@+id/BodyTemR"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btr"
                android:layout_marginTop="30dp"
                android:text="體溫記錄及異常通報"
                android:textSize="60dp"/>
            <Button
                android:id="@+id/PulseR"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:onClick="pr"
                android:text="脈搏記錄及異常通報"
                android:textSize="60dp"/>
            <Button
                android:id="@+id/BreatheR"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="br"
                android:layout_marginTop="30dp"
                android:text="呼吸記錄及異常通報"
                android:textSize="60dp"/>
            <Button
                android:id="@+id/BloodPR"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bpr"
                android:layout_marginTop="30dp"
                android:text="血壓記錄及異常通報"
                android:textSize="60dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>