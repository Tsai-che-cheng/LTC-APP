<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UrinaryExcretion">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <Button
                android:id="@+id/UrinaryIncontinence"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ui"
                android:text="尿失禁處置"
                android:layout_marginTop="50dp"
                android:textSize="60dp"/>
            <Button
                android:id="@+id/UrinaryNotClean"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="unc"
                android:text="解尿解不乾淨處置(尿瀦留)"
                android:layout_marginTop="50dp"
                android:textSize="60dp"/>
            <Button
                android:id="@+id/UrinaryTractInfectionPrevention"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="utip"
                android:text="泌尿道感染\n預防"
                android:layout_marginTop="50dp"
                android:textSize="60dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>